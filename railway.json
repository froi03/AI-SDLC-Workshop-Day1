{
	"$schema": "https://railway.com/railway.schema.json",
	"build": {
		"builder": "RAILPACK",
		"buildCommand": "npm run build"
	},
	"deploy": {
		"startCommand": "npm run start -- --port ${PORT:-3000}",
		"restartPolicyType": "ON_FAILURE",
		"restartPolicyMaxRetries": 5,
		"healthcheckPath": "/"
	}
}
